{% extends "FeatherCoreBundle::layout.html.twig" %}

{# 
 # Load specific stylesheets for this view
 #
 # @author Jonathan Gleyze <gleyze.jonathan.pro@gmail.com>
 #
 # @original Remark <amazingSurge@yahoo.com>
 #}
{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('assets/examples/css/pages/profile.css') }}">
{% endblock %}

{# 
 # Make specific body class for required elements 
 #
 # @author Jonathan Gleyze <gleyze.jonathan.pro@gmail.com>
 #}
{% block settings %}page-profile site-menubar-unfold{% endblock %}


{#
 # Load block content for this view
 #
 # Author Gleyze Jonathan <gleyze.jonathan.pro@gmail.com>
 #
 # @original Remark <amazingSurge@yahoo.com>
 #}
{% block content %}
<div class="page animsition" style="animation-duration: 0.8s; opacity: 1;">
    <div class="page-content container-fluid">
        <div class="row">
            <div class="col-md-3">
                <div class="widget widget-shadow text-center">
                    <div class="widget-header">
                        <div class="widget-header-content">
                            <a class="avatar avatar-lg" href="javascript:void(0)">
                            <img src="{{ asset('assets/portraits/5.jpg') }}" alt="avatar">
                            </a>
                            <h4 class="profile-user">Terrance arnold</h4>
                            <p class="profile-job">Art director</p>
                            <p>Hi! I'm Adrian the Senior UI Designer at AmazingSurge. We hope
                              you enjoy the design and quality of Social.</p>
                        </div>
                </div>
                <div class="widget-footer">
                    <div class="row no-space">
                        <div class="col-xs-4"></div>
                    </div>
                </div>
            </div>
        </div>
    <div class="col-md-9">
        <div class="panel">
            <div class="panel-body nav-tabs-animate">
                <ul class="nav nav-tabs nav-tabs-line" data-plugin="nav-tabs" role="tablist">
                    <li class="active" role="presentation"><a data-toggle="tab" href="#activities" aria-controls="activities" role="tab">Activities</a></li>
                    <li role="presentation"><a data-toggle="tab" href="#profile" aria-controls="profile" role="tab">Profile</a></li>
                    <li role="presentation"><a data-toggle="tab" href="#messages" aria-controls="messages" role="tab">Messages</a></li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active animation-slide-left" id="activities" role="tabpanel">
                    
                    </div>
                
                    <div class="tab-pane animation-slide-left" id="profile" role="tabpanel">
    
                    </div>
    
                    <div class="tab-pane animation-slide-left" id="messages" role="tabpanel">
    
                    </div>
                </div>
            </div>
    </div>
</div>
{% endblock %}


{# 
 # Load specific stylesheets for this view
 #
 # @author Jonathan Gleyze <gleyze.jonathan.pro@gmail.com>
 #}
{% block javascripts %}
    <script>
      <script>
         (function(document, window, $) {
           'use strict';

           var Site = window.Site;
           $(document).ready(function() {
             Site.run();
           });
         })(document, window, jQuery);
       </script>
    </script>
{% endblock %}