<header class="slidePanel-header overlay" {% if chrome %}style="background: url({{ data.cover }});background-size: cover;"{% endif %} data-method="scroll" data-min="50">
    <div class="overlay-top overlay-panel overlay-background">
        <div class="slidePanel-actions btn-group" aria-label="actions" role="group">
            <button type="button" class="btn btn-pure btn-inverse slidePanel-close icon wb-close"aria-hidden="true"></button>
        </div>
        <h4>{{ data.name }} {% if chrome %}( {{ 'page_browser_streaming_not_available'|trans }} ){% endif %}</h4>
    </div>

    {% if not chrome %}
        <object classid="clsid:67DABFBF-D0AB-41fa-9C46-CC0F21721616" width="700" height="430" codebase="http://go.divx.com/plugin/DivXBrowserPlugin.cab" style="position: absolute;left: 0;right: 0;bottom: 0;z-index: -1;">
            <param name="custommode" value="none"/>
            <param name="autoPlay" value="false"/>
            <param name="src" value="{{ path('download_file', {'hash': data.uid}) }}"/>

            <embed type="video/divx" src="{{ path('download_file', {'hash': data.uid}) }}" custommode="none" width="700" height="430" autoPlay="false"  pluginspage="http://go.divx.com/plugin/download/"></embed>
        </object>
    {% endif %}
</header>

<div class="slidePanel-inner">
    <section class="slidePanel-inner-section">
        <div class="media-header">
            <div class="tags">Cat√©gorie:
                <button type="button" class="btn btn-outline btn-default">Film</button>
            </div>
        </div>
        <div class="media-content">
            <p>{{ data.description }}</p>
        </div>
    </section>

    <section class="slidePanel-inner-section">
        {% for message in messages %}
            <div class="media-header">
                <div class="pull-right">
                    <div class="time">{{ message.date|date('d/m/y') }}</div>
                </div>
                <a class="avatar margin-right-10" href="javascript:void(0)">
                    <img src="{{ asset('assets/portraits/2.jpg') }}" alt="{{ data.name }}">
                </a>
                <span class="name">{{ message.user.username }}</span>
            </div>
            <div class="media-content">
                <p>{{ message.content }}</p>
            </div>
        {% endfor %}
    </section>

    <div class="slidePanel-comment">
        <textarea class="maxlength-textarea form-control mb-sm margin-bottom-20" rows="4"></textarea>
        <button class="btn btn-primary" data-dismiss="modal" type="button">Poster un commentaire</button>
    </div>
</div>



